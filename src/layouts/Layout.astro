---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Senior Frontend Engineer Portfolio" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-container">
        <a href="/" class="nav-brand">dev.</a>
        <ul class="nav-links">
          <li><a href="/">home</a></li>
          <li><a href="/skills">skills</a></li>
          <li><a href="/experience">experience</a></li>
          <li><a href="/blog">blog</a></li>
        </ul>
      </div>
    </nav>
    
    <main class="main">
      <slot />
    </main>
    
    <footer class="footer">
      <p>&copy; 2025 • built with astro</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* Gruvbox Color Scheme - Dark */
    --bg: #282828;
    --bg0: #1d2021;
    --bg1: #3c3836;
    --bg2: #504945;
    --fg: #ebdbb2;
    --fg0: #fbf1c7;
    --fg1: #d5c4a1;
    --fg2: #bdae93;
    --red: #fb4934;
    --green: #b8bb26;
    --yellow: #fabd2f;
    --blue: #83a598;
    --purple: #d3869b;
    --aqua: #8ec07c;
    --orange: #fe8019;
    --gray: #928374;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    background-color: var(--bg);
    color: var(--fg);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .nav {
    border-bottom: 1px solid var(--bg1);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    background-color: var(--bg);
    z-index: 100;
  }

  .nav-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--yellow);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-links a {
    color: var(--fg1);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--yellow);
  }

  .main {
    flex: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
    width: 100%;
  }

  .footer {
    border-top: 1px solid var(--bg1);
    padding: 2rem;
    text-align: center;
    color: var(--gray);
    font-size: 0.9rem;
  }

  h1, h2, h3 {
    color: var(--fg0);
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: normal;
  }

  h2 {
    font-size: 1.8rem;
    font-weight: normal;
    color: var(--green);
  }

  h3 {
    font-size: 1.3rem;
    font-weight: normal;
    color: var(--blue);
  }

  p {
    margin-bottom: 1.5rem;
    color: var(--fg1);
  }

  .highlight {
    color: var(--yellow);
  }

  .muted {
    color: var(--gray);
  }

  .section {
    margin-bottom: 4rem;
  }

  .card {
    background-color: var(--bg1);
    border: 1px solid var(--bg2);
    border-radius: 4px;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .skill-category h3 {
    color: var(--aqua);
    margin-bottom: 1rem;
  }

  .skill-list {
    list-style: none;
  }

  .skill-list li {
    color: var(--fg1);
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1rem;
  }

  .skill-list li::before {
    content: '▸';
    position: absolute;
    left: 0;
    color: var(--green);
  }

  .experience-item {
    margin-bottom: 3rem;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .job-title {
    color: var(--yellow);
    font-size: 1.2rem;
    font-weight: bold;
  }

  .company {
    color: var(--blue);
    font-size: 1.1rem;
  }

  .date {
    color: var(--gray);
    font-size: 0.9rem;
  }

  .blog-post {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--bg1);
  }

  .blog-post:last-child {
    border-bottom: none;
  }

  .blog-meta {
    color: var(--gray);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .blog-title {
    color: var(--fg0);
    font-size: 1.4rem;
    margin-bottom: 0.5rem;
  }

  .blog-excerpt {
    color: var(--fg1);
    margin-bottom: 1rem;
  }

  .read-more {
    color: var(--yellow);
    text-decoration: none;
    font-size: 0.9rem;
  }

  .read-more:hover {
    color: var(--orange);
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .main {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .experience-header {
      flex-direction: column;
      align-items: start;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
